* {
    margin: 0;
    padding: 0;
    list-style: none;
    box-sizing: border-box;
  }

body
  font-family var(--font-family-sans-serif), "Noto Sans TC" 
  text-align center
  background-size 100%
  color white
  background url(https://images.unsplash.com/photo-1594093453516-d080672bb5ac?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1834&q=80) fixed
#app
  height 100%
  display flex
  text-align center
  flex-direction column
  justify-content space-between

#home
  margin-top 12%
  display flex
  flex-direction column
  justify-content space-between

.m-auto h2
  font-size 3rem

#text
  width 100%
  height 100%
  display flex
  align-items: center
  justify-content center


#text h3
  background rgba(255, 255, 255, 0.2)
  padding 0.5rem
  font-size 3rem
  margin-bottom 2rem

#nav
  display: flex
  justify-content: space-around 
  font-size 30px
  position: relative
  top: 20px

#list
  margin-top: 3rem
  background: rgba(255,255,255,0.2)

#listtext
  color: white
  font-size: 1rem
  text-align: left

#settings
  margin-top: 3rem
  background: rgba(255,255,255,0.2)

#settext
  color: white
  font-size: 1rem